[Unit]
Description=smart home server
After=remote-fs.target nss-user-lookup.target systemd-time-wait-sync.service time-sync.target systemd-timesyncd
                                        
[Service]
Type=simple
ExecStartPre=%h/.local/bin/smart-home-update
ExecStart=%h/.local/bin/smart-home-server
Restart=on-failure
RestartSec=10
KillMode=process

[Install]
WantedBy=default.target
